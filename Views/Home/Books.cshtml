@{
    ViewData["Title"] = "MyBooks";
}

@model BookStoreClient.Models.BooksViewModel

<div class="text-center">
    <h1 class="display-4">Available Books</h1>
</div>
<div class="mb-3">
    <form asp-controller="Home" asp-action="Books">
    <input name="SearchTerm" type="text" class="form-control" placeholder="Enter to search">
    <button type="submit" class="btn btn-primary mt-3 mb-3">Search</button>
    </form>
</div>
<div>
    <table class="table">
        <thead>
            <tr>
            <th>Id</th>
            <th><a href="/Home/Books?OrderBy=@Model.TitleOrderBy">Title</a></th>
            <th><a href="/Home/Books?OrderBy=@Model.AuthorOrderBy">Author</a></th>
            <th><a href="/Home/Books?OrderBy=@Model.PriceSort">Price</a></th>
            <th><a href="/Home/Books?OrderBy=@Model.StockSort">Stock Quantity</a></th>
            <th><a href="/Home/Books?OrderBy=@Model.CategoryOrderBy">Category</a></th>
            </tr>
        </thead>
        <tbody>
            
                @foreach(var item in Model.BooksResponse)
                {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Title</td>
                    <td>@item.Author</td>
                    <td>@item.Price</td>
                    <td>@item.StockQuantity</td>
                    <td>@item.Category</td>
                </tr>
                }
        </tbody>
    </table>
    <div class="align-content-center">
        @{
            int currentPage = Model.CurrentPage;
            int totalPages = Model.TotalPages;
        }

        <nav aria-label="Page navigation">
            <ul class="pagination">

                <!-- Previous Arrow -->
                <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                    <a class="page-link"
                       href="@(currentPage > 1 ? $"/Home/Books?Page={currentPage - 1}" : "#")"
                       aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>

                <!-- Previous Page Number -->
                @if (currentPage > 1)
                {
                    <li class="page-item">
                        <a class="page-link" href="/Home/Books?Page=@(currentPage - 1)">
                            @(currentPage - 1)
                        </a>
                    </li>
                }

                <!-- Current Page -->
                <li class="page-item active">
                    <span class="page-link">@currentPage</span>
                </li>

                <!-- Next Page Number -->
                @if (currentPage < totalPages)
                {
                    <li class="page-item">
                        <a class="page-link" href="/Home/Books?Page=@(currentPage + 1)">
                            @(currentPage + 1)
                        </a>
                    </li>
                }

                <!-- Next Arrow -->
                <li class="page-item @(currentPage >= totalPages ? "disabled" : "")">
                    <a class="page-link"
                       href="@(currentPage < totalPages ? $"/Home/Books?Page={currentPage + 1}" : "#")"
                       aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>

            </ul>
        </nav>
    </div>
</div>
