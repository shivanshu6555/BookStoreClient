@{
    ViewData["Title"] = "MyBooks";
}

@model BookStoreClient.Models.BooksViewModel

<div class="text-center">
    <h1 class="display-4">Available Books</h1>
</div>
<div class="mb-3">
    <form asp-controller="Home" asp-action="Books">
    <input name="SearchTerm" type="text" class="form-control" placeholder="Enter to search">
    <button type="submit" class="btn btn-primary mt-3 mb-3">Search</button>
    </form>
</div>
<div>
    <table class="table">
        <thead>
            <tr>
            <th>Id</th>
            <th><a href="/Home/Books?OrderBy=@Model.TitleOrderBy">Title</a></th>
            <th><a href="/Home/Books?OrderBy=@Model.AuthorOrderBy">Author</a></th>
            <th><a href="/Home/Books?OrderBy=@Model.PriceSort">Price</a></th>
            <th><a href="/Home/Books?OrderBy=@Model.StockSort">Stock Quantity</a></th>
            <th><a href="/Home/Books?OrderBy=@Model.CategoryOrderBy">Category</a></th>
            </tr>
        </thead>
        <tbody>
            
                @foreach(var item in Model.BooksResponse)
                {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Title</td>
                    <td>@item.Author</td>
                    <td>@item.Price</td>
                    <td>@item.StockQuantity</td>
                    <td>@item.Category</td>
                    <td>@item.Category</td>
                </tr>
                }
        </tbody>
    </table>
    <div class="align-content-center">
        <nav aria-label="Page navigation example">
            <ul class="pagination">
                <li class="page-item">
                    <a class="page-link" href="#" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
                <li class="page-item"><a class="page-link" href="/Home/Books?Page=1">1</a></li>
                <li class="page-item"><a class="page-link" href="/Home/Books?Page=2">2</a></li>
                <li class="page-item"><a class="page-link" href="/Home/Books?Page=3">3</a></li>
                <li class="page-item">
                    <a class="page-link" href="#" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            </ul>
        </nav>
    </div>
</div>
